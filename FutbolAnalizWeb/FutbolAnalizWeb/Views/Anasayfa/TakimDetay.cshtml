<div class="container text-center">
    <div class="row" style="margin:0!important; padding:0!important;">

        <div class="col-12 pb-1" style="border-bottom:1px solid white;">
            @{
                var base64_11 = Convert.ToBase64String(Model.MyTakim.takim_logo);
                var imgSrc_11 = String.Format("data:image/gif;base64,{0}", base64_11);
            }


            <img src="@imgSrc_11" style="width:50px; height:50px;" class="d-inline" />
            <h5 class="d-inline my-auto" style="color:white; height:50px;">@Model.MyTakim.takim_ad</h5>

        </div>
        <!--    son 5 mac    -->

        <div class="col-12 col-lg-6 text-center mt-4  d-block d-lg-inline" style="height:300px; width:inherit; background-color:white;">
            <h4 style="border-bottom:1px solid black;">Son 5 Mac</h4>
            <div class="row ">

                @for (int i = 0; i < Model.Son5MacListesi.Count; i++)
                {

                    <div class="col-0 col-lg-1 my-1"></div>


                    <div class="col-12 col-lg-10 my-1 ">
                        <div class="d-flex nav justify-content-center row mt-1">
                            <div class="col-0 col-lg-1"></div>
                            @{
                                var takimAdiOrg = Model.Son5MacListesi[i].evSahibi;

                                var takimAdi = takimAdiOrg.Length > 11 ? takimAdiOrg.Replace(" ", ".").Substring(0, 11) + ".." : takimAdiOrg;
                                takimAdiOrg = takimAdiOrg.Replace(" ", ".");
                            }
                            <div class="col-4 col-lg-4 d-flex text-center ">
                                <p class="float-right d-flex  align-content-end" data-toggle="tooltip" data-placement="left" title=@takimAdiOrg>

                                    @takimAdi

                                <p />
                            </div>
                            <div class="col-3 col-lg-2 d-flex align-items-lg-center">

                                <div style="position:absolute; top:0px; font-size:10px; padding-left:5px; ">
                                    iy:@Model.Son5MacListesi[i].eviy_sk - @Model.Son5MacListesi[i].depiy_sk
                                </div>
                                <div style="position:absolute; top:10px;">
                                    <h5>  @Model.Son5MacListesi[i].evms_sk - @Model.Son5MacListesi[i].depms_sk</h5>
                                </div>

                            </div>
                            @{
                                var takimAdiDepOrg = Model.Son5MacListesi[i].deplasman;

                                var takimAdiDep = takimAdiDepOrg.Length > 11 ? takimAdiDepOrg.Replace(" ", ".").Substring(0, 11) + ".." : takimAdiDepOrg;
                                takimAdiDepOrg = takimAdiDepOrg.Replace(" ", ".");
                            }
                            <div class="col-4 col-lg-4  d-flex ">
                                <p class="float-left d-flex  align-content-start" data-toggle="tooltip" data-placement="right" title=@takimAdiDepOrg>

                                    @takimAdiDep


                                </p>
                            </div>
                            <div class="col-1 col-lg-1"></div>
                        </div>
                    </div>
                    <div class="col-0 col-lg-1 my-1"></div>

                }


